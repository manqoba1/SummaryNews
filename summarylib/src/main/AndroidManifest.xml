<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sifiso.codetribe.summarylib">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".SummaryApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme"
        android:label="@string/app_name">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"></activity>

        <provider
            android:name=".sql.SummaryProvider"
            android:authorities="com.sifiso.codetribe.summarylib.sql"
            android:enabled="true"
            android:grantUriPermissions="true"
            android:readPermission="com.sifiso.codetribe.summarylib.READ"
            android:writePermission="com.sifiso.codetribe.summarylib.WRITE"
            android:exported="true"></provider>

        <service
            android:name=".util.SummaryIntentService"
            android:exported="false"></service>


    </application>

</manifest>
